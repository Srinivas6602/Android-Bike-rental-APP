<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9"
    android:orientation="vertical"
    android:background="@color/foreground"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/rideTime"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_margin="20dip"
        android:textAlignment="center"
        android:text= "Start time :"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/rideEndtime"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_margin="20dip"
        android:textAlignment="center"
        android:text="Ride End : "
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/rideAmount"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:layout_margin="20dip"
        android:textAlignment="center"
        android:text="Total Amount :"
        android:textColor="@color/black"
        android:textSize="20sp" />

    />
    <Button
        android:id="@+id/btnRideEnd"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:text="END RIDE"
        android:textColor="@color/white"
        android:background="@drawable/high_priority_button"
        android:layout_marginHorizontal="40dip"/>
</LinearLayout>